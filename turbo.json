{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "test:e2e": {
      "dependsOn": ["^build"],
      "outputs": ["cypress/videos/**", "cypress/screenshots/**"]
    },
    "test:e2e:dev": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
